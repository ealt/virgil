{
  "name": "virgil",
  "displayName": "Virgil",
  "description": "Interactive guided walkthroughs for code review and codebase exploration",
  "version": "0.1.0",
  "publisher": "virgil",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:*.walkthrough.json",
    "onCommand:virgil.convertMarkdown"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "virgil.start",
        "title": "Start Walkthrough",
        "category": "Virgil"
      },
      {
        "command": "virgil.next",
        "title": "Next Step",
        "category": "Virgil"
      },
      {
        "command": "virgil.prev",
        "title": "Previous Step",
        "category": "Virgil"
      },
      {
        "command": "virgil.goToStep",
        "title": "Go to Step",
        "category": "Virgil"
      },
      {
        "command": "virgil.refresh",
        "title": "Refresh Walkthrough",
        "category": "Virgil"
      },
      {
        "command": "virgil.selectWalkthrough",
        "title": "Select Walkthrough",
        "category": "Virgil"
      },
      {
        "command": "virgil.submitComment",
        "title": "Submit Comment",
        "category": "Virgil"
      },
      {
        "command": "virgil.convertMarkdown",
        "title": "Convert Markdown to Walkthrough",
        "category": "Virgil"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "virgil",
          "title": "Virgil",
          "icon": "$(book)"
        }
      ]
    },
    "views": {
      "virgil": [
        {
          "id": "virgilWalkthrough",
          "name": "Walkthrough",
          "contextualTitle": "Virgil Walkthrough"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "virgil.refresh",
          "when": "view == virgilWalkthrough",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "command": "virgil.convertMarkdown",
          "when": "resourceExtname == .md",
          "group": "virgil"
        }
      ],
      "editor/context": [
        {
          "command": "virgil.convertMarkdown",
          "when": "editorLangId == markdown",
          "group": "virgil"
        }
      ]
    },
    "keybindings": [
      {
        "command": "virgil.next",
        "key": "ctrl+shift+]",
        "mac": "cmd+shift+]",
        "when": "virgilWalkthroughActive"
      },
      {
        "command": "virgil.prev",
        "key": "ctrl+shift+[",
        "mac": "cmd+shift+[",
        "when": "virgilWalkthroughActive"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "refresh:extension": "scripts/refresh-extension.sh"
  },
  "dependencies": {
    "highlight.js": "^11.9.0",
    "js-yaml": "^4.1.0",
    "marked": "^9.1.0",
    "marked-highlight": "^2.1.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.0"
  }
}