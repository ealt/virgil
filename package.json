{
  "name": "virgil-walkthroughs",
  "displayName": "Virgil: Walkthroughs",
  "description": "Interactive guided walkthroughs for code review and codebase exploration",
  "version": "0.1.3",
  "publisher": "ealt",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Education",
    "Other"
  ],
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "preview": false,
  "icon": "icon.png",
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "virgil.start",
        "title": "Start Walkthrough",
        "category": "Virgil"
      },
      {
        "command": "virgil.next",
        "title": "Next Step",
        "category": "Virgil"
      },
      {
        "command": "virgil.prev",
        "title": "Previous Step",
        "category": "Virgil"
      },
      {
        "command": "virgil.goToStep",
        "title": "Go to Step",
        "category": "Virgil"
      },
      {
        "command": "virgil.refresh",
        "title": "Refresh Walkthrough",
        "category": "Virgil"
      },
      {
        "command": "virgil.selectWalkthrough",
        "title": "Select Walkthrough",
        "category": "Virgil"
      },
      {
        "command": "virgil.submitComment",
        "title": "Submit Comment",
        "category": "Virgil"
      },
      {
        "command": "virgil.convertMarkdown",
        "title": "Convert Markdown to Walkthrough",
        "category": "Virgil"
      },
      {
        "command": "virgil.goToParent",
        "title": "Go to Parent Step",
        "category": "Virgil"
      },
      {
        "command": "virgil.nextSibling",
        "title": "Next Sibling Step",
        "category": "Virgil"
      },
      {
        "command": "virgil.prevSibling",
        "title": "Previous Sibling Step",
        "category": "Virgil"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "virgil",
          "title": "Virgil",
          "icon": "$(book)"
        }
      ]
    },
    "views": {
      "virgil": [
        {
          "id": "virgilWalkthrough",
          "name": "Walkthrough",
          "contextualTitle": "Virgil Walkthrough"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "virgil.refresh",
          "when": "view == virgilWalkthrough",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "command": "virgil.convertMarkdown",
          "when": "resourceExtname == .md",
          "group": "virgil"
        }
      ],
      "editor/context": [
        {
          "command": "virgil.convertMarkdown",
          "when": "editorLangId == markdown",
          "group": "virgil"
        }
      ]
    },
    "keybindings": [
      {
        "command": "virgil.next",
        "key": "ctrl+shift+]",
        "mac": "cmd+shift+]",
        "when": "virgilWalkthroughActive"
      },
      {
        "command": "virgil.prev",
        "key": "ctrl+shift+[",
        "mac": "cmd+shift+[",
        "when": "virgilWalkthroughActive"
      },
      {
        "command": "virgil.goToParent",
        "key": "ctrl+shift+\\",
        "mac": "cmd+shift+\\",
        "when": "virgilWalkthroughActive"
      },
      {
        "command": "virgil.nextSibling",
        "key": "ctrl+alt+]",
        "mac": "cmd+alt+]",
        "when": "virgilWalkthroughActive"
      },
      {
        "command": "virgil.prevSibling",
        "key": "ctrl+alt+[",
        "mac": "cmd+alt+[",
        "when": "virgilWalkthroughActive"
      }
    ],
    "configuration": {
      "title": "Virgil",
      "properties": {
        "virgil.highlights.standard.backgroundColor": {
          "type": "string",
          "default": "#569CDE1A",
          "description": "Hex color for standard (non-diff) highlight background. Supports 6-digit (#RRGGBB) or 8-digit (#RRGGBBAA) format."
        },
        "virgil.highlights.standard.borderColor": {
          "type": "string",
          "default": "#569CDE99",
          "description": "Hex color for standard highlight border. Supports 6-digit (#RRGGBB) or 8-digit (#RRGGBBAA) format."
        },
        "virgil.highlights.standard.overviewRulerColor": {
          "type": "string",
          "default": "#569CDECC",
          "description": "Hex color for standard overview ruler. Supports 6-digit (#RRGGBB) or 8-digit (#RRGGBBAA) format."
        },
        "virgil.highlights.diffHead.backgroundColor": {
          "type": "string",
          "default": "#48B46126",
          "description": "Hex color for diff head (new/current) highlight background. Supports 6-digit (#RRGGBB) or 8-digit (#RRGGBBAA) format."
        },
        "virgil.highlights.diffHead.borderColor": {
          "type": "string",
          "default": "#48B46199",
          "description": "Hex color for diff head highlight border. Supports 6-digit (#RRGGBB) or 8-digit (#RRGGBBAA) format."
        },
        "virgil.highlights.diffHead.overviewRulerColor": {
          "type": "string",
          "default": "#48B461CC",
          "description": "Hex color for diff head overview ruler. Supports 6-digit (#RRGGBB) or 8-digit (#RRGGBBAA) format."
        },
        "virgil.highlights.diffBase.backgroundColor": {
          "type": "string",
          "default": "#DC505026",
          "description": "Hex color for diff base (old) highlight background. Supports 6-digit (#RRGGBB) or 8-digit (#RRGGBBAA) format."
        },
        "virgil.highlights.diffBase.borderColor": {
          "type": "string",
          "default": "#DC505099",
          "description": "Hex color for diff base highlight border. Supports 6-digit (#RRGGBB) or 8-digit (#RRGGBBAA) format."
        },
        "virgil.highlights.diffBase.overviewRulerColor": {
          "type": "string",
          "default": "#DC5050CC",
          "description": "Hex color for diff base overview ruler. Supports 6-digit (#RRGGBB) or 8-digit (#RRGGBBAA) format."
        },
        "virgil.view.defaultDiffViewMode": {
          "type": "string",
          "enum": [
            "diff",
            "head",
            "base"
          ],
          "default": "diff",
          "description": "Default view mode for diff steps. 'diff' shows side-by-side comparison, 'head' shows new code only, 'base' shows old code only."
        },
        "virgil.view.defaultMarkdownViewMode": {
          "type": "string",
          "enum": [
            "rendered",
            "raw"
          ],
          "default": "rendered",
          "description": "Default view mode for markdown files. 'rendered' shows formatted markdown with highlighting, 'raw' shows source markdown."
        },
        "virgil.view.autoShowFirstStep": {
          "type": "boolean",
          "default": true,
          "description": "Automatically show the first step when a walkthrough is loaded."
        },
        "virgil.view.showStepNumbers": {
          "type": "boolean",
          "default": true,
          "description": "Show hierarchical step numbers in step labels."
        },
        "virgil.view.showHierarchicalNavigation": {
          "type": "boolean",
          "default": false,
          "description": "Show parent and sibling navigation buttons in the step panel."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "smoke": "node scripts/smoke-test.js",
    "version:bump": "node scripts/version-bump.js",
    "postinstall": "node scripts/setup-git-hooks.js",
    "package": "vsce package",
    "publish": "vsce publish",
    "refresh:extension": "scripts/refresh-extension.sh",
    "test:conversions": "scripts/test-conversions.sh"
  },
  "dependencies": {
    "highlight.js": "^11.9.0",
    "js-yaml": "^4.1.0",
    "marked": "^9.1.0",
    "marked-highlight": "^2.1.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vscode/vsce": "^3.7.1",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.1.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ealt/virgil.git"
  },
  "homepage": "https://github.com/ealt/virgil#readme",
  "bugs": {
    "url": "https://github.com/ealt/virgil/issues"
  },
  "keywords": [
    "vscode",
    "vscode-extension",
    "walkthrough",
    "code-review",
    "onboarding",
    "documentation",
    "tutorial",
    "code-exploration",
    "guided-tour"
  ],
  "license": "MIT"
}
